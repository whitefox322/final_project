#news-slider.carousel.slide(data-ride="carousel")
	// Indicators
	ol.carousel-indicators
		li(data-target="#news-slider", data-slide-to="0", class="active")
		li(data-target="#news-slider", data-slide-to="1")
		li(data-target="#news-slider", data-slide-to="2")

	// Wrapper for slides
	.carousel-inner(role="listbox")
		.item.active
			img(src="...", alt="...")
			.carousel-caption ...
		.item
			img(src="...", alt="...")
			.carousel-caption ...

	// Controls
	a.left.carousel-control(href="#news-slider", role="button", data-slide="prev")
		span.glyphicon.glyphicon-chevron-left(aria-hidden="true")
		span.sr-only Previous

	a.right.carousel-control(href="#news-slider", role="button", data-slide="next")
		span.glyphicon.glyphicon-chevron-right(aria-hidden="true")
		span.sr-only Next