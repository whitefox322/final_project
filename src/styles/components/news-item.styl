@import "../mixins/icon"
@import "../mixins/label"
common-transition()
	transition: background .3s
.news-item
	padding 0
	margin 0
	position relative
	border none
	&__row
		margin-bottom: 30px
	&__wrapper
		//
	&__img-wrapper
		height: 190px
		overflow: hidden
		background #f4f4f4
		common-transition()
	&__img
		width 100%
		border-top-left-radius 4px
		border-top-right-radius 4px
	&__pic
		width: 100%
		height: auto
	&__label
		label()
		padding-left 10px
		padding-right 10px
		top 15px
		left 5px
	&__caption
		padding 15px
		background #f4f4f4
		border-bottom-left-radius 4px
		border-bottom-right-radius 4px

		common-transition()

	&__header
		margin 10px 0 15px
		height: 50px
		overflow: hidden
		font-size 16px
		font-family "Roboto Bold", sans-serif

	&__desc
		position relative
		margin 0
		font-size 12px
		font-family "Roboto Regular", sans-serif
		line-height 1.25
		padding-right: 30px

		&-wrapper
			display inline-block
			overflow hidden
			height 60px
			//word-break: break-all
	&__read-more
		width 13px
		height 25px
		position absolute
		bottom 0
		right 10px
		background url("/icons/read-more-icon.png") no-repeat center

	&__footer
	&__info
		line-height 1
		font-size 0

		&:after
			content ''
			display inline-block
			width 100%
			height 0
	&__info
		text-align justify
	&__footer
		padding-top: 10px
		margin-top 15px
		border-top 1px solid #d7d7d7
	&__publish-date
	&__comments-count
	&__share-btn
		display inline-block
		font-size 14px
		font-family "Roboto Regular", sans-serif
		position relative
		padding-left 20px
		height 16px
		min-width 16px
		color light-grey-color

		&:after
			margin-top -8px !important

	&__publish-date
		&:after
			icon("/icons/date-icon.png")
			flaticon-calendar()
	&__comments-count
		&:after
			icon("/icons/comments-count-icon.png")
			flaticon-chat-comment-oval-speech-bubble-with-text-lines()
	&__share-btn
		padding 0
		margin-left 10px
		&:after
			icon("/icons/share-icon.png")
			flaticon-share()
			height 19px
			width 16px
			margin-top -4px !important
	&__tags
		margin: 0
		padding: 0
		list-style: none
		//padding-left: 25px
		position: relative
		color: #86939e
		&:before
			content: ''
			position: absolute
			width: 16px
			height: 16px
			//background: url(/icons/tag-icon.png) no-repeat center
			//flaticon-business()
			font-size: 14px
			top: 0
			left: 0

	&__tag
		display: inline-block
		margin-right: 5px
	&__tag-link
		font-size: 10px
		color: #86939e

		&:after
			content: ','
			display: inline-block
	&__tag:last-child > .news-item__tag-link:after
		content: ''
	&:hover
		.news-item__caption
		.news-item__img-wrapper
			background: main-green-color
		.news-item__share-btn
		.news-item__header
		.news-item__desc
		.news-item__publish-date
		.news-item__comments-count
		.news-item__share-btn
		.news-item__tag-link
		.news-item__tags
			color: white-text-color
			