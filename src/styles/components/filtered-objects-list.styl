transition-bg()
	transition background .3s

.filtered-objects-list
	margin: 0
	padding: 0
	list-style: none
	a:hover
		text-decoration: none

	&__buttons
		text-align: justify
		margin: 0
		padding: 0
		list-style: none

		&:after
			content: ''
			display: inline-block
			height: 0
			width: 100%
	&__btn-item
		display: inline-block
	&__button
		display: inline-block
		btn(main-green-color, main-green-color)
		font-size: 12px
		font-family: "Roboto Bold", sans-serif
		padding: 10px 20px
		border-radius: 5px
	&__img-container
		float: left
		height: 270px
		width: 260px
		overflow: hidden
		text-align: center
	&__text-container
		padding: 15px 25px
		margin-left: 260px
	&__item
		width: 100%
		height: 270px
		background: #ededed
		display: inline-block
		margin-bottom: 30px
		transition-bg()
	&__link
		display: inline-block
		width: 100%
		height: 100%
	&__img
		height: 100%
		width: auto
		//min-width: 100%
		//min-height: 100%
		//width: auto
		//height: auto
	&__title
		white-space: nowrap
		-ms-text-overflow: ellipsis
		text-overflow: ellipsis
		overflow: hidden
		font-size: 36px
		font-family: "Roboto Bold", sans-serif
		color: main-green-color
		margin: 0
		transition-bg()
	&__rating
		color: yellow-color
		font-size: 16px
	&__date
		font-size: 13px
		font-family: "Roboto Medium", sans-serif
		color: #86939e
		transition-bg()
		icon-container()

		&:after
			icon("/icons/date-icon.png")
			flaticon-calendar()
			background: none
	&__desc
		margin-top: 10px
		font-family: "Roboto Regular", sans-serif
		font-size: 13px
		color: #515151
		line-height: 1.35
		height: 150px
		overflow: hidden
		transition-bg()

		*
			margin: 0
	&__pagination-container
		text-align: center
		margin: 15px 0
