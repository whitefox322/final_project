.object-recommendations-slider
	&__header
		font-size: 36px
		font-family: "Roboto Bold", sans-serif
		color: main-green-color
		margin: 25px 0 40px
	&__item
		//
	&__img
		position: relative
		width: 100%
		overflow: hidden
	&__pic
		width: 100%
		height: auto
	&__cap
		padding: 2px 10px
		position: absolute
		background: rgba(30, 30, 30, .5)
		color: #fff
		text-decoration: none
		white-space: pre
		-ms-text-overflow: ellipsis
		text-overflow: ellipsis
		overflow: hidden
		height: 2em
		width: 100%
		bottom: 0
		left: 0
	&__col
		position: relative
	&__row
		//
