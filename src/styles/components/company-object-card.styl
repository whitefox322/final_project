@import "../mixins/label"
.company-object-card
	width: 100%
	overflow: hidden
	display: inline-block
	&:hover
	&:active
	&:focus
		text-decoration: none
	&__out
		height: 170px
		position: relative
	&__img
		&:after
			content: '';
			display: inline-block;
			width: 0;
			height: 100%;
			vertical-align: middle;
		width: 100%
		height: 100%
		text-align: center

	&__pic
		width: auto
		height: 100%
		vertical-align: middle;
	&__label
		label(main-green-color, 14px)
		top: 10px
		left: 15px
		&.label-danger
			background: red-color
	&__rating
		color: yellow-color
		position: absolute
		bottom: 10px
		left: 15px
	&__footer
		transition: background .3s
		background: main-green-color
		height: 40px
		text-align: center
		color: white-text-color
		font-family: "Roboto Medium", sans-serif
		line-height: 10px
		padding: 7px 0
		&:after
			content: '';
			display: inline-block;
			width: 0;
			height: 100%;
			vertical-align: middle;
.company-object-card:hover .company-object-card__footer
	background: lighten(main-green-color, 20%)