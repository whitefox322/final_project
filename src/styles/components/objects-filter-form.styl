.objects-filter-form
	&__expand-btn
		display: none
		btn(main-green-color, main-green-color)
		font-size: 12px
		font-family: "Roboto Bold", sans-serif
		padding: 10px 20px
		border-radius: 5px
		width: 100%

	&__fieldset
		margin-bottom: 20px
	&__fieldsets-container
		transition: max-height 1s linear
	&__legend
		font-size: 14px
		font-family: "Roboto Bold", sans-serif
		color: #515050
		margin-bottom: 15px
		border: 0
	&__group
		margin-bottom: 5px
	&__checkbox
		margin: 0
		display: none
	&__label
		font-size: 13px
		font-family: "Roboto Regular", sans-serif
		color: #515151
		line-height: 1
		font-weight: normal
		margin: 0
		vertical-align: middle
		position: relative
		padding-left: 25px

		&:before
			transition background 1s
			content: ''
			top: 50%
			left: 0
			margin-top: -8px
			position: absolute
			background: #ededed no-repeat center
			width: 16px
			height: 16px
			-webkit-border-radius: 3px
			-moz-border-radius: 3px
			border-radius: 3px
	&__price-group
		font-size: 10px
		font-family: "Roboto Regular", sans-serif
		color: #515151
	&__price
		width: 50px
		display: inline-block
		margin: 0 5px
		vertical-align: middle
		font-size: 12px
		padding: 5px
		height: 30px
		text-align: center
		font-family: "Roboto Regular", sans-serif
		color: #515151
		border: 1px solid #ededed
		-webkit-box-shadow: none
		-moz-box-shadow: none
		box-shadow: none

	&__range
		font-size: 10px
		margin-top: 21px
		height: 5px
		border-radius: 0

		.noUi-handle
			height: 16px
			width: 16px
			left: -8px
			border-radius: 50%
			border: none
			box-shadow: 0 0 2px 2px #e9e9e9

			&:before
				height: 8px
				width: 8px
				background: main-green-color
				left: 50%
				top: 50%
				margin-top: -4px
				margin-left: -4px
				border-radius: 50%

			&:after
				display: none

.objects-filter-form__checkbox:checked ~ .objects-filter-form__label
	&:before
		background-image: url(/icons/checkbox-checked.png)
		background-color: main-green-color

@media (max-width: 992px)
	.objects-filter-form
		margin-bottom: 20px
	.objects-filter-form
		&__fieldsets-container
			max-height: 0
			overflow: hidden
			margin: 0 !important

		&__expand-btn
			display: block !important
	.objects-filter-form__fieldsets-container.objects-filter-form__fieldsets-container--visible
		max-height: 9999px !important
		margin-bottom: 20px !important