@import "../mixins/btn"

.section-header-container
	margin 25px 0px
	position relative
	&:after
		content ''
		position absolute
		width 100%
		height 1px
		left 0
		top 50%
		background main-green-color
.section-header
	position relative
	z-index 2
	font-size 36px
	font-family "Roboto Light", sans-serif
	display inline-block
	background bg-color
	padding-right 20px
	margin 0

	&__btn-container
		position absolute
		right 0
		top 0
		height 100%
		background bg-color
		z-index: 3
		padding-left 20px
		line-height 36px

	&__btn
		btn(lighter-grey-color, #999)
		font-size 10px
		font-family "Roboto Medium", sans-serif
		padding 4px 10px