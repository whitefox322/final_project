.entity-gallery
	background: #f4f4f4
	padding: 20px
	&__wrapper
		padding: 0 30px
	&__header
		text-align: center
		position: relative
		margin: 0 0 30px

		&:after
			content ''
			position absolute
			width 100%
			height 1px
			left 0
			top 50%
			background main-green-color
	&__title
		display: inline-block
		background: #f4f4f4
		position: relative
		z-index: 2
		margin: 0
		padding: 0 10px
		font-size: 26px
		font-family: "Roboto Regular", sans-serif

	&__next
	&__prev
		width: 30px
		background: none

	&__next
		right: -45px
	&__prev
		left: -45px